{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "chrome"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "_v/*": [
        "src/views/*"
      ],
      "_c/*": [
        "src/components/*"
      ]
    },
    "lib": ["esnext", "dom"],
    "rootDir": "../"
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue", 
    "typings/**/*.d.ts",
    "../typings/**/*.d.ts",
    "config/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
