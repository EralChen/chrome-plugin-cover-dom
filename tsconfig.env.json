{
  "compilerOptions": {
    "noUnusedLocals": true,
    "module": "ESNext",
    "composite": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "disableSizeLimit": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "ESNext",
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "ESNext", "DOM",
    ],
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "typings/*.d.ts",
    "internal/**/*.ts",
    "packages/**/*.vue",
    "packages/**/*.ts",
  ],
  "exclude": [
    "dist"
  ]
 }
 