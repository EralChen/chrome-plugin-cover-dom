{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["WebWorker"],
    "paths": {
      "@vunk/skzz": ["../packages/entry"],
      "~/*": ["./.vitepress/vitepress/*"]
    },

    "jsx": "preserve"
  },
  "include": ["**/*", ".vitepress/**/*", "../typings/components.d.ts"],
  "exclude": ["node_modules"]
}
